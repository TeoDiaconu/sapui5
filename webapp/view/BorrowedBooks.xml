
<core:FragmentDefinition
xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:c="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
xmlns:ui="sap.ui" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" >

<Dialog id="openDialog" title="Borrowed Books">
    
<Table id="idBooksTable"
		items="{
			path: '/BorrowedBooks'
		}"
		growing="true"
		mode="SingleSelectLeft"
		growingThreshold="10">

		<headerToolbar> 
			<Toolbar>
				<content>
				<Button text="Cancel" press=".closeDialog"/>
				</content>
			</Toolbar>
		</headerToolbar>

	
		<columns>
			<Column>
				<Text text="Id" />
			</Column>
			<Column>
				<Text text="FirstName" />
			</Column>
			<Column>
				<Text text="LastName" />
			</Column>
			<Column>
				<Text text="Username" />
			</Column>
         	<Column>
				<Text text="CheckoutDate" />
			</Column>
			<Column>
				<Text text="ReturnDate" />
			</Column>
            <Column>
				<Text text="Isbn" />
			</Column>
            <Column>
				<Text text="Title" />
			</Column>
            <Column>
				<Text text="Author" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
                    <Text text="{Id}"/>
					<Text text="{FirstName}"/>
					<Text text="{LastName}" />
                    <Text text="{Username}" />
					<Text text="{ 
							path: 'CheckoutDate',
							type: 'sap.ui.model.type.Date'
               			}" 
					/>
                    <Text text="{ 
							path: 'ReturnDate',
							type: 'sap.ui.model.type.Date'
               			}" 
					/>
					<Text text="{Isbn}" />
					<Text text="{Title}" />
					<Text text="{Author}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
   
<buttons>
    <Button text="Cancel" press=".closeDialog"/>
</buttons>
</Dialog>
</core:FragmentDefinition>